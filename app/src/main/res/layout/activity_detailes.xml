<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.miestro.popularmoviesstage1.Detailes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_title_hieght"
            android:textSize="@dimen/details_title_text_size"
            android:background="@color/nameheader"
            android:textColor="@color/whilte"
            android:paddingLeft="@dimen/details_title_paddingleft"
            android:paddingRight="@dimen/details_title_paddingRight"
            android:paddingTop="@dimen/details_title_paddingTop"
            android:paddingBottom="@dimen/details_title_paddingBottom"
            android:id="@+id/movie_name"
           android:text="@string/title"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/linear_poster_padding"
            >
            <ImageView
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height"
                android:src="@drawable/ic_imageholder"
                android:id="@+id/movie_poster"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/linear_date_marginleft"
                android:layout_marginTop="@dimen/linear_date_margineTop"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realse_date"
                    android:text="@string/date"
                    android:textSize="@dimen/release_date_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/rating"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/overview_margin"
            android:id="@+id/overview"
            android:text="@string/overview"
            />
    </LinearLayout>
</ScrollView>
